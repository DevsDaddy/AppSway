<!DOCTYPE html>
<html lang="{{#if LANGUAGE includeZero=true}}{{LANGUAGE}}{{else}}en{{/if}}" dir="ltr" data-nav-layout="vertical" data-theme-mode="dark" data-header-styles="dark" data-menu-styles="dark" data-toggled="close">
    <head>
        {{> meta }}
        {{> theme_base }}
    </head>
    <body>
        <!-- Loader -->
        <div id="loader" >
            <img src="/assets/images/media/loader.svg" alt="">
        </div>
        <!-- Loader -->

        <div class="container-lg">
            <div class="row justify-content-center authentication authentication-basic align-items-center h-100">
                <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-6 col-sm-8 col-12">
                    <div class="my-4 d-flex justify-content-center">
                        <a href="/">
                            <img src="/assets/images/brand-logos/desktop-dark.png" alt="logo">
                        </a>
                    </div>
                    <div class="card custom-card">
                        <div class="card-body p-5">
                            <!-- Start::header-element -->
                            <div class="header-element country-selector" style="text-align: center; margin-bottom: 20px;">
                                <!-- Start::header-link|dropdown-toggle -->
                                <a href="javascript:void(0);" class="header-link dropdown-toggle" data-bs-auto-close="outside"
                                    data-bs-toggle="dropdown">
                                    <img src="/assets/images/flags/{{LANGUAGE}}.png" alt="img" class="rounded-circle">
                                </a>
                            
                                <!-- End::header-link|dropdown-toggle -->
                                <ul class="main-header-dropdown dropdown-menu dropdown-menu-end" data-popper-placement="none">
                                    {{#each LANGUAGES}}
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="?lng={{code}}">
                                            <span class="avatar avatar-xs lh-1 me-2">
                                                <img src="{{icon}}" alt="{{name}}">
                                            </span>
                                            {{name}}
                                        </a>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <!-- End::header-element -->
                            
                            <p class="h5 fw-semibold mb-2 text-center">Sign Up</p>
                            <p class="mb-4 text-muted op-7 fw-normal text-center">Welcome to <b>{{APP_NAME}}</b>! Create your account to unlock all features.</p>
                            {{#if error includeZero=true}}
                            <div id="error" class="alert alert-danger rounded-pill fade show">
                                {{error}}
                            </div>
                            {{/if}}
                            <form id="signin" name="signin" method="post" action="/auth/register/">
                                {{#if redirect includeZero=true}}
                                <input type="hidden" name="redirect" value="{{redirect}}" />
                                {{/if}}
                                <input type="hidden" name="from" value="web" />
                                <div class="row gy-3">
                                    <div class="col-xl-12">
                                        <label for="signin-email" class="form-label text-default">Email:</label>
                                        <input type="email" required class="form-control form-control-lg" id="signin-email" name="email" placeholder="Please, type your Email">
                                    </div>

                                    <div class="col-xl-12">
                                        <label for="signin-username" class="form-label text-default">User Name:</label>
                                        <input id="nickfield" type="text" required maxlength="30" class="form-control form-control-lg" id="signin-username" name="username" placeholder="Please, enter your username">
                                        <div id="username_error" class="alert alert-danger rounded-pill fade show mt-2" style="display: none;"></div>
                                    </div>
                                    
                                    <div class="col-xl-12 mb-2">
                                        <label for="signup-password" class="form-label text-default">Come up with a Password</label>
                                        <div class="input-group">
                                            <input type="password" required name="password" maxlength="32" class="form-control form-control-lg" id="signup-password" placeholder="Please, type your password">
                                            <button aria-label="button" class="btn btn-light" data-action="show_password" data-form="signup-password" type="button" id="button-addon23"><i class="ri-eye-off-line align-middle"></i></button>
                                        </div>
                                    </div>
                                    <div class="col-xl-12 mb-2">
                                        <label for="signup-confirmpassword" class="form-label text-default">Confirm Password</label>
                                        <div class="input-group">
                                            <input type="password" required name="confirm_password" maxlength="32" class="form-control form-control-lg" id="signup-confirmpassword" placeholder="Confirm your Password">
                                            <button aria-label="button" class="btn btn-light" data-action="show_password" data-form="signup-confirmpassword" type="button" id="button-addon21"><i class="ri-eye-off-line align-middle"></i></button>
                                        </div>
                                        <div class="form-check mt-3">
                                            <input class="form-check-input" type="checkbox" name="terms_accepted" required value="true" id="defaultCheck1">
                                            <label class="form-check-label text-muted fw-normal" for="defaultCheck1">
                                                By creating a account you agree to our <a href="/terms/general/" class="text-success"><u>Terms &amp; Conditions</u></a> and <a href="/terms/privacy/" class="text-success"><u>Privacy Policy</u></a>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xl-12 d-grid mt-2">
                                        <button type="submit" class="btn btn-lg btn-primary">Create account</button>
                                    </div>
                                </div>
                            </form>

                            <div class="text-center">
                                <p class="text-muted mt-3">Already have an account? <a href="/auth/" class="text-primary">Sign In</a></p>
                            </div>
                            <div class="text-center my-3 authentication-barrier">
                                <span>OR</span>
                            </div>
                            <div class="btn-list text-center">
                                <button type="button" aria-label="button" class="btn btn-icon btn-primary-transparent">
                                    <i class="ri-facebook-fill"></i>
                                </button>
                                <button type="button" aria-label="button" class="btn btn-icon btn-primary-transparent">
                                    <i class="ri-google-fill"></i>
                                </button>
                                <button type="button" aria-label="button" class="btn btn-icon btn-primary-transparent">
                                    <i class="ri-twitter-fill"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{> base_scripts }}

        <!-- Show Password JS -->
        <script src="/assets/js/show-password.js"></script>
        <script src="/assets/js/usernamechecker.js"></script>
    </body>
</html>